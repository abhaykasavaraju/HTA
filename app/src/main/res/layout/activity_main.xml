<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Complaint"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="25sp"
            android:background="#32CC99"
            android:onClick="postC"
      />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track Progress"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="25sp"
            android:background="#6FDCB8"
            android:onClick="trackP"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vote on Complaints"
            android:background="#ADEBD6"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_weight="1"
            android:onClick="goTo"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Suggestions"
            android:gravity="center"
            android:background="#EBFAF5"
            android:textSize="25sp"
            android:layout_weight="1"
            android:onClick="postSuggestion"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>